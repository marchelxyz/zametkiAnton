# Telegram Bot Token (получите от @BotFather)
# Для локальной разработки можно оставить пустым - будут использоваться тестовые данные
BOT_TOKEN=

# URL базы данных PostgreSQL
# Railway автоматически добавит эту переменную при подключении PostgreSQL
# Для локальной разработки оставьте пустым - будет использоваться SQLite
DATABASE_URL=

# Режим отладки
# true - позволяет работать без авторизации Telegram (для разработки)
# false - требуется валидная авторизация Telegram (для production)
DEBUG=true

# Порт сервера (Railway автоматически установит)
PORT=5000

# Google Cloud Storage настройки
# Имя бакета в Google Cloud Storage для хранения вложений
GCS_BUCKET_NAME=

# JSON ключ сервисного аккаунта Google Cloud (закодированный в base64)
# Получите в Google Cloud Console: IAM & Admin -> Service Accounts -> Create Key -> JSON
# Затем закодируйте: base64 -w 0 service-account.json
GCS_CREDENTIALS_BASE64=

# Альтернативно: путь к JSON файлу с ключами (для локальной разработки)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
