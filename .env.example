# Telegram Bot Token (получите от @BotFather)
# Для локальной разработки можно оставить пустым - будут использоваться тестовые данные
BOT_TOKEN=

# URL базы данных PostgreSQL
# Railway автоматически добавит эту переменную при подключении PostgreSQL
# Для локальной разработки оставьте пустым - будет использоваться SQLite
DATABASE_URL=

# Режим отладки
# true - позволяет работать без авторизации Telegram (для разработки)
# false - требуется валидная авторизация Telegram (для production)
DEBUG=true

# Порт сервера (Railway автоматически установит)
PORT=5000
