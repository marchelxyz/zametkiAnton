# Telegram Bot Token (получите от @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# URL базы данных PostgreSQL
# Railway автоматически добавит эту переменную при подключении PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/notes_db

# URL веб-приложения (для кнопки в боте)
# Railway автоматически задаёт RAILWAY_PUBLIC_DOMAIN
# Укажите вручную, если используете другой хостинг
WEBAPP_URL=https://your-app.railway.app

# Автоматически устанавливать webhook при запуске (true/false)
AUTO_SET_WEBHOOK=true

# Режим отладки (опционально, по умолчанию false)
DEBUG=false

# Порт сервера (Railway автоматически установит)
PORT=5000
